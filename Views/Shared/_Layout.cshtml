<!DOCTYPE html>
<html lang="tr" data-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>
        @ViewData["Title"] - @(System.Globalization.CultureInfo.CurrentUICulture.Name.StartsWith("en") ? "GRIT Geographic Risk" : "GRIT Coğrafi Risk")
    </title>

    <meta name="description" content="GRIT - Doğal afet risk analizi ve coğrafi risk çözümleri." />
    <meta name="keywords" content="coğrafi risk, afet analizi, sigorta risk" />
    <meta name="author" content="GRIT Coğrafi Risk ve Bilgi Teknoloji Hizmetleri" />

    <link rel="manifest" href="~/favicon_io/site.webmanifest">
    
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="theme-color" content="#1A7E63">
    
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <link rel="apple-touch-icon" sizes="180x180" href="~/favicon_io/apple-touch-icon.png">

    <link rel="icon" type="image/x-icon" href="~/favicon_io/favicon.ico" />
    <link rel="icon" type="image/png" sizes="32x32" href="~/favicon_io/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/favicon_io/favicon-16x16.png">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Roboto:wght@300;400;500&display=swap" rel="stylesheet">
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/themes/prism-tomorrow.min.css" rel="stylesheet">

    <link href="~/css/site-variables.css" rel="stylesheet" />
    <link href="~/css/site-base.css" rel="stylesheet"/>
    <link href="~/css/components/_footer.css" rel="stylesheet"/>
    <link href="~/css/components/_header.css" rel="stylesheet"/>

    @RenderSection("Styles", required: false)
</head>
<body>

@Html.Partial("_Header")

<main role="main">
    @RenderBody()
</main>

@Html.Partial("_Footer")

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>


<script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r128/three.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>



<script src="~/js/site-layout.js"></script>

@RenderSection("Scripts", required: false)


</body>
</html>